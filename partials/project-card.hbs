{{!--
Re-usable card for linking to projects
--}}

<div class="bg-gray-300">
<a href="{{url}}">
    <div class="overflow-hidden w-full h-[120px] sm:h-[220px]">
    <img
        src="{{img_url  feature_image}}"
        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
        class="w-full h-full max-w-full hover:scale-[1.1] duration-[3s] object-cover"
    />
    </div>
    <div class="p-2 sm:p-4 text-black border-t-4 border-black">
    {{#if showTags}}
        {{#foreach tags limit="2"}}
            <span
                class="text-[8px] sm:text-[12px] py-1 px-2 mr-1 mb-1 sm:mb-2 inline-block bg-black rounded-sm font-medium tracking-wider uppercase text-white/80"
            >
                {{name}}
            </span>
        {{/foreach}}
    {{/if}}
        
    
    <h3 class="font-sans text-lg mb-0">
        {{title}}
    </h3>
    </div>
</a>
</div>