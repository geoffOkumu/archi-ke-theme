<div class="h-screen w-full relative">
      <div class="keen-slider h-full w-full" id="hero-slider">
        {{#get "posts" limit="5" filter="featured:true" include="tags"}}
          {{#foreach posts}}
            <div
              class="w-full h-full overflow-hidden relative keen-slider__slide number-slide{{@number}}"
            >
              <img
                src="{{img_url  feature_image}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                class="h-[60%] md:h-full w-full object-cover"
              />
              <div class="md:absolute z-50 w-full h-[40%] md:h-full top-0 left-0 bg-black md:bg-black/30">
                <div class="container w-full h-full flex items-center">
                  <div class="block pb-8 md:pb-0">
                    <h2 class="text-white text-2xl sm:text-3xl md:text-5xl font-serif font-medium leading-snug max-w-[500px] mb-4 mb:mb-8">
                      {{title}}
                    </h2>
                    <a href="{{url}}">
                      <button class="border w-[180px] bg-white hover:bg-black hover:border-black border-white text-black hover:text-white py-2 px-4 text-base uppercase font-sans font-medium flex items-center">
                        <span class="mr-2">Learn More</span>
                        {{> 'icons/arrow-up-right'}}
                      </button>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          {{/foreach}}
        {{/get}}
      </div>

      <div class="absolute w-full h-full top-0 left-0 pointer-events-none">

        <div class="w-full bg-black/20 backdrop-blur-sm text-white border-t border-white/50 absolute bottom-0 left-0 h-12 flex items-center pointer-events-auto">
          <div class="container w-full flex items-center justify-between">
            <button
              class="bg-transparent border-none p-0 hover:text-blue-600"
              id="slider-arrow-left"
            >
              {{> "icons/arrow-left" className="text-white h-4" id="slider-arrow-left"}}
            </button>
            <span class="text-center" id="slider-number-el">
              {{!-- Add current slide number --}}
            </span>
            <button
              class="bg-transparent border-none p-0 hover:text-blue-600"
              id="slider-arrow-right"
            >
              {{> "icons/arrow-right" className="text-white h-4" id="slider-arrow-right"}}
            </button>
          </div>
        </div>
      </div>
    </div>