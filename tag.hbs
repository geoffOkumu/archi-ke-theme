{{!< default}}

<div class="bg-gradient-to-r from-purple-500 to-pink-500 pb-10 pt-[150px] {{#if feature_image}}bg-[url({{feature_image}})]{{/if}}">
    <div class="container text-white">

        {{#tag}}
        <header class="text-start bg-black p-4 max-w-[720px]">

            <h1 class="font-serif text-5xl"># {{name}}</h1>

            <p class="text-lg mt-4">
                {{#if description}}
                    {{description}}
                {{else}}
                    A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
                {{/if}}
            </p>

        </header>
        {{/tag}}
    </div>
</div>
<div class="container my-5 grid grid-cols-1 md:grid-cols-2 gap-5">
    {{#foreach posts}}

        {{> "card"}} {{!-- partials/card.hbs --}}

    {{/foreach}}
</div>

